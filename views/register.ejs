                <input class="form-control" type="password" placeholder="Password" name="password" required>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Sign Up">
            </div>
        </form>
            <a href="/login">Login</a>
        </div>
    </div>
</div>

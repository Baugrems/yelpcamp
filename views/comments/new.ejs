<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Post a Comment to <%= campground.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <textarea name="comment[text]"></textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Add Comment">
            </div>
        </form>
            <a href="/campgrounds">Return</a>
        </div>

    </div>
</div>
<% include ../partials/footer %>
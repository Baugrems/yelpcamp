<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Comment</h1>
        <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id%>/?_method=PUT" method="POST">
            <div class="form-group">
                <textarea name="comment[text]"><%=comment.text%></textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Edit Comment">
            </div>
        </form>
            <a href="/campgrounds">Return</a>
        </div>

    </div>
</div>

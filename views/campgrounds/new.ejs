<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a new Campground</h1>
        <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Name" name="name" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" placeholder="Price" name="price" min="0.01" step="0.01" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Image URL" name="image" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="textarea" placeholder="Description" name="description" required>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Add Campground">
            </div>
        </form>
            <a href="/campgrounds">Return</a>
        </div>

    </div>
</div>
<% include ../partials/footer %>
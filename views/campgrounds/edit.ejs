<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit - <%= campground.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" value="<%= campground.price %>" min="0.01" step="0.01" name="campground[price]" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="textarea" value="<%= campground.description %>" name="campground[description]" required>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Edit Campground">
            </div>
        </form>
            <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">Cancel</a>
        </div>

    </div>
</div>
<% include ../partials/footer %>